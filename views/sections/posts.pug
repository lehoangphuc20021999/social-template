                                    .dots-icon.dots-icon_comment
                                        .dots.text-right
                                            i.bx.bx-dots-horizontal-rounded
                                        ul.actions
                                            li
                                                a(href="#").text-hover-purple
                                                    i.bx.bx-trash
                                                    span Xóa
                                            li 
                                                a(href="#").text-hover-purple
                                                    i.bx.bx-edit-alt
                                                    span Chỉnh sửa
                                .actions.d-flex
                                    button(type="button").btn-like.text-hover-purple Thích 
                                        span ·
                                    span 5 giờ
                                .your-reply.sub.closeDiv
                                    .d-flex.align-items-center
                                        .profile-avatar
                                            a(href="/trangcanhan")
                                                img(src="/assets/images/user.jpg", alt="User")
