section#manage-department-section
    .page-content
        .container
            .section-wrapper
                .section-title
                    h4 Xem danh sách phòng ban
            #profile.tab-pane(role='tabpanel' aria-labelledby='profile-tab')
                .row
                    .col-12
                        .your-profile
                            ul#myTab.nav.nav-tabs.justify-content-center.justify-content-md-start(role='tablist')
                                li.nav-item(role='presentation')
                                    a#viewList-tab.nav-link.active(data-toggle='tab' href='#viewList' role='tab' aria-controls='viewList' aria-selected='true') Danh sách phòng ban
                                li.nav-item(role='presentation')
                                    a#createDepartment-tab.nav-link(data-toggle='tab' href='#createDepartment' role='tab' aria-controls='createDepartment' aria-selected='false') Tạo phòng ban
                                li.nav-item(role='presentation')
                                    a#createAccount-tab.nav-link(data-toggle='tab' href='#createAccount' role='tab' aria-controls='createAccount' aria-selected='false') Tạo tài khoản
                            #myTabContent.tab-content
                                #viewList.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='viewList-tab')
                                    table.table.table-striped
                                        thead
                                            tr
                                                th 
                                                    span STT
                                                th
                                                    span Mã phòng ban
                                                th
                                                    span Tên phòng ban
                                        tbody 
                                            tr 
                                                td 
                                                    span 1
                                                td 
                                                    span PDH5001003
                                                td 
                                                    span Phòng đại học
                                            tr 
                                                td 
                                                    span 2
                                                td 
                                                    span 17050201
                                                td 
                                                    span Khoa CNTT
                                            tr 
                                                td 
                                                    span 3
                                                td 
                                                    span 17050201
                                                td 
                                                    span Phòng CTHSSV

                                #createDepartment.tab-pane.fade(role='tabpanel' aria-labelledby='createDepartment-tab')
                                    form(action="", method="POST")
                                        .form-group
                                            label(for="name") Tên phòng ban:
                                            input.form-control#name(type="text", name="nameDepartment", value="Phòng CTHSSV")
                                        .form-group
                                            label(for="class") Mã phòng ban:
                                            input.form-control#class(type="text", name="codeDepartment", value="17050201" disabled)
                                        .text-right
                                            button.btn.btn-create(type="submit").background-hover-light-purple Tạo
                                #createAccount.tab-pane.fade(role='tabpanel' aria-labelledby='createAccount-tab')
                                    form(action="", method="POST")
                                        .form-group
                                            label(for="nameAccount") Tên phòng ban:
                                            input.form-control#nameAccount(type="text", name="nameAccount", value="Phòng CTHSSV")
                                        .form-group
                                            label(for="codeAccount") Mã phòng ban:
                                            input.form-control#codeAccount(type="text", name="codeAccount", value="17050201" disabled)
                                        .form-group
                                            label(for="email") Email:
                                            input.form-control#email(type="email", name="email", value="lehoangphuc20021999@gmail.com")
                                        .form-group
                                            label(for="password") Mật khẩu:
                                            input.form-control#password(type="password", name="password", value="123123")
                                        .form-group
                                            label(for="rePassword") Nhập lại mật khẩu:
                                            input.form-control#rePassword(type="password", name="rePassword", value="123123")
                                        .text-right
                                            button.btn.btn-create.background-hover-light-purple(type="submit") Tạo